<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_style"
    android:padding="10dp"
    android:orientation="vertical">
<!--与之关联的类：ShowDataFragment和GestureGraphic-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="我的数据"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/cardImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/img1"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#000000"/>
<!--    这些TextView用于展示标题名-->

    <TextView
        android:id="@+id/title_finish"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="已完成："
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/data_finish"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-32dp"
        android:text="20"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/title_lasttime"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:text="最近训练："
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/data_lasttime"
        android:layout_width="207dp"
        android:layout_height="30dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-30dp"
        android:text="2021-2-1 15:29"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/title_remaincount"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="剩余个数："
        android:textColor="#000000"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/data_remaincount"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="110dp"
        android:text="30"
        android:textColor="#000000"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/title_remaingroup"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="剩余组数："
        android:textColor="#000000"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/data_remaingroup"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="120dp"
        android:text="4"
        android:textColor="#000000"
        android:textSize="20dp" />
</LinearLayout>